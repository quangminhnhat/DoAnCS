    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const studentSelect = document.getElementById('student_id');
            const classSelect = document.getElementById('class_id');
            const studentWarning = document.getElementById('studentWarning');
            const classDetails = document.getElementById('classDetails');
            const scheduleInfo = document.getElementById('scheduleInfo');
            const timeInfo = document.getElementById('timeInfo');
            const feeInfo = document.getElementById('feeInfo');
            const teacherInfo = document.getElementById('teacherInfo');
            const enrollmentInfo = document.getElementById('enrollmentInfo');
            const statusBadge = document.getElementById('statusBadge');
            
            studentSelect.addEventListener('change', function () {
                const selected = studentSelect.options[studentSelect.selectedIndex];
                if (selected && selected.dataset.unpaid === 'true') {
                    studentWarning.textContent = 'Warning: Student has unpaid fees';
                } else {
                    studentWarning.textContent = '';
                }
            });
            classSelect.addEventListener('change', function () {
                const selected = classSelect.options[classSelect.selectedIndex];
                if (selected && selected.value) {
                    classDetails.style.display = '';
                    scheduleInfo.textContent = selected.dataset.schedule || '';
                    timeInfo.textContent = selected.dataset.time || '';
                    feeInfo.textContent = selected.dataset.fee ? `$${selected.dataset.fee}` : '';
                    teacherInfo.textContent = selected.dataset.teacher || '';
                    enrollmentInfo.textContent = selected.dataset.enrolled || '';
                    const status = selected.dataset.status || '';
                    let badge = '';
                    if (status === 'Active') badge = '<span class="status-badge status-active">Active</span>';
                    else if (status === 'Upcoming') badge = '<span class="status-badge status-upcoming">Upcoming</span>';
                    else if (status === 'Ended') badge = '<span class="status-badge status-ended">Ended</span>';
                    else badge = `<span class="status-badge">${status}</span>`;
                    statusBadge.innerHTML = badge;
                } else {
                    classDetails.style.display = 'none';
                }
            });
            document.querySelector('form').addEventListener('submit', function (e) {
                const studentSelected = studentSelect.options[studentSelect.selectedIndex];
                const classSelected = classSelect.options[classSelect.selectedIndex];
                if (studentSelected && studentSelected.dataset.unpaid === 'true') {
                    e.preventDefault();
                    alert('Cannot enroll: Student has unpaid fees.');
                    return;
                }
                if (classSelected && classSelected.dataset.status === 'Ended') {
                    e.preventDefault();
                    alert('Cannot enroll: Class has ended.');
                    return;
                }
            });
        });
    </script>

