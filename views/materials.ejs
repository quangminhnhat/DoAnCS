    <script>
        $(document).ready(function () {
            $('#materialsTable').DataTable({
                responsive: true,
                columns: [
                    { data: 'id' },
                    { data: 'course_id' },
                    { 
                        data: 'file_name',
                        render: function(data, type, row) {
                            return `<a href="/${row.file_path}" target="_blank" 
                                      class="text-blue-600 hover:text-blue-900 hover:underline">
                                    ${data}
                                   </a>`;
                        }
                    },
                    { 
                        data: 'uploaded_at',
                        render: function(data) {
                            return new Date(data).toLocaleDateString();
                        }
                    },
                    {
                        data: null,
                        orderable: false,
                        render: function(data, type, row) {
                            return `
                                <div class="flex item-center justify-center gap-2">
                                    <a href="/materials/${row.id}/edit" 
                                       class="text-blue-600 hover:text-blue-900" 
                                       title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form action="/materials/${row.id}?_method=DELETE" 
                                          method="POST"
                                          class="inline-block"
                                          onsubmit="return confirm('Are you sure you want to delete this file?')">
                                    <button type="submit" 
                                            class="text-red-600 hover:text-red-900" 
                                            title="Delete">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>`;
                        }
                    }
                ],
                language: {
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ tài liệu",
                    info: "Hiển thị _START_ đến _END_ của _TOTAL_ tài liệu",
                    paginate: {
                        previous: "Trước",
                        next: "Sau"
                    },
                    emptyTable: "Không có tài liệu nào"
                }
            });
        });
