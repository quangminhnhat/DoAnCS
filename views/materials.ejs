    <main>
        <div class="modern-container">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem;">
                <div class="modern-title">
                    <i class="fas fa-file"></i> Course Materials
                </div>
                <a href="/upload" class="modern-btn-primary">
                    <i class="fas fa-upload"></i> Upload Material
                </a>
            </div>
            <div class="overflow-x-auto">
                <table class="modern-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Course</th>
                            <th>File Name</th>
                            <th>Upload Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (materials.length === 0) { %>
                        <tr>
                            <td colspan="5" style="text-align:center; color:#888; padding:2rem;">No materials found</td>
                        </tr>
                        <% } else { %>
                        <% materials.forEach(material => { %>
                        <tr>
                            <td><%= material.id %></td>
                            <td><%= material.course_id %></td>
                            <td><a href="/<%= material.file_path %>" target="_blank" class="text-blue-600 hover:text-blue-900 hover:underline"><%= material.file_name %></a></td>
                            <td><%= new Date(material.uploaded_at).toLocaleDateString() %></td>
                            <td class="actions">
                                <a href="/materials/<%= material.id %>/edit" title="Edit"><i class="fas fa-edit"></i></a>
                                <form action="/materials/<%= material.id %>?_method=DELETE" method="POST" style="display:inline;">
                                    <button type="submit" title="Delete" class="delete" onclick="return confirm('Are you sure you want to delete this file?');"><i class="fas fa-trash-alt"></i></button>
                                </form>
                            </td>
                        </tr>
                        <% }) %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
