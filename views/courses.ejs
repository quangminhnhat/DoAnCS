      color: #718096;
      font-size: 0.75rem;
      text-transform: uppercase;
      letter-spacing: 0.05em;
      padding: 0.5rem 1rem;
      margin-bottom: 0.5rem;
    }

    .nav-button {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0.75rem 1rem;
      color: #4a5568;
      text-decoration: none;
      transition: all 0.2s;
    }

    .nav-button:hover {
      background-color: rgba(66, 153, 225, 0.1);
      color: #4299e1;
    }

    .nav-button i {
      width: 1.25rem;
      text-align: center;
