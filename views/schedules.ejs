<!DOCTYPE html>
<html>

<head>
    <title>Schedules</title>
</head>

<body>
    <h1>Schedule List</h1>
    <a href="/schedules/new">Add New Schedule</a> | <a href="/">Back</a>
    <table border="1">
        <thead>
            <tr>
                <th>ID</th>
                <th>Class</th>
                <th>Day</th>
                <th>Date</th>
                <th>Start</th>
                <th>End</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% schedules.forEach(s => { %>
            <tr>
                <td><%= s.id %></td>
                <td><%= s.class_name %></td>
                <td><%= s.day_of_week %></td>
                <td><%= s.schedule_date.toISOString().split('T')[0] %></td>
                <td><%= s.start_time %></td>
                <td><%= s.end_time %></td>
                <td>
                    <a href="/schedules/<%= s.id %>/edit">Edit</a>
                    <form method="POST" action="/schedules/<%= s.id %>?_method=DELETE" style="display:inline;">
                        <button type="submit" onclick="return confirm('Delete this schedule?')">Delete</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>

</html>