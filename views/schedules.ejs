    <style>
        html,
        body {
            height: 100%;
            min-height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .main-content {
            flex: 1 0 auto;
        }

        footer {
            flex-shrink: 0;
            width: 100%;
        }

        .modern-table-container {
            max-width: 1100px;
            margin: 40px auto 0 auto;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
            border: 1px solid #e3e6ed;
            padding: 2.5rem 2rem 2rem 2rem;
            animation: fadeIn 0.5s;
        }

        .modern-table-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: 1px;
        }

        #scheduleTable {
            font-size: 1rem;
            width: 100% !important;
            border-radius: 12px;
            overflow: hidden;
            background: #fff;
        }

        #scheduleTable th {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            border: none;
            padding: 12px 8px;
        }

        #scheduleTable td {
            background: #f9fafb;
            border: none;
            padding: 10px 8px;
            color: #22223b;
        }

        #scheduleTable tr {
            border-bottom: 1px solid #e5e7eb;
        }

        #scheduleTable tr:last-child {
            border-bottom: none;
        }

        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 16px rgba(36, 117, 216, 0.10);
            transition: background 0.2s, transform 0.15s;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.7rem;
            margin-bottom: 10px;
        }

        .modern-btn-primary:hover {
            background: linear-gradient(90deg, #0c9083 0%, #2375D8 100%);
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 8px 24px rgba(36, 117, 216, 0.18);
        }

        .modern-btn-secondary {
            background: #e5e7eb;
            color: #2375D8;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 10px;
            margin-left: 10px;
            display: inline-flex;
            align-items: center;
            gap: 0.7rem;
            transition: background 0.2s, color 0.2s;
        }

        .modern-btn-secondary:hover {
            background: #d1d5db;
            color: #0c9083;
        }

        .btn-edit,
        .btn-delete {
            border: none;
            border-radius: 6px;
            padding: 6px 12px;
            font-size: 1rem;
            margin: 0 2px;
            cursor: pointer;
            transition: background 0.2s, color 0.2s;
            display: inline-flex;
            align-items: center;
            gap: 0.4rem;
        }

        .btn-edit {
            background: #e0f2fe;
            color: #2375D8;
        }

        .btn-edit:hover {
            background: #bae6fd;
            color: #0c9083;
        }

        .btn-delete {
            background: #fee2e2;
            color: #ef4444;
        }

        .btn-delete:hover {
            background: #fecaca;
            color: #b91c1c;
        }

        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter {
            margin-bottom: 10px;
            font-size: 1rem;
        }

        .dataTables_wrapper .dataTables_length select,
        .dataTables_wrapper .dataTables_filter input {
            height: 32px;
            padding: 4px 10px;
            font-size: 1rem;
            border-radius: 6px;
            border: 1px solid #e5e7eb;
        }

        .dataTables_info,
        .dataTables_paginate {
            font-size: 1rem;
            margin-top: 10px;
        }

        .paginate_button {
            padding: 6px 14px !important;
            font-size: 1rem !important;
            border-radius: 6px !important;
            margin: 0 2px !important;
            background: #f3f4f6 !important;
            color: #2375D8 !important;
            border: none !important;
        }

        .paginate_button.current {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%) !important;
            color: #fff !important;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

<body>
    <%- include('../views/shared/header.ejs') %>
 
<% if (messages.error) { %>
<div id="loginPopup" class="fixed inset-0 flex items-center justify-center z-50">
  <div class="fixed inset-0 bg-black opacity-50"></div>
  <div class="bg-white rounded-lg p-8 relative z-10">
    <div class="flex flex-col items-center">
      <div class="text-xl font-bold text-red-600 mb-4">
        <i class="fas fa-exclamation-circle mr-2"></i>
        Authentication Required
      </div>
      <p class="text-gray-700 mb-4"><%= messages.error %></p>
      <button onclick="closePopup()" class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
        OK
      </button>
    </div>
  </div>
</div>

<script>
  function closePopup() {
    const popup = document.getElementById('loginPopup');
    if (popup) {
      popup.classList.add('fade-out');
      setTimeout(() => {
        popup.remove();
      }, 300);
    }
  }

  // Auto close after 3 seconds
  setTimeout(closePopup, 3000);
</script>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
    }

    to {
      opacity: 1;
    }
  }

  @keyframes fadeOut {
    from {
      opacity: 1;
    }

    to {
      opacity: 0;
    }
  }

  #loginPopup {
    animation: fadeIn 0.3s ease-in;
  }

  #loginPopup.fade-out {
    animation: fadeOut 0.3s ease-out;
  }
</style>
<% } %>


   
    <script>
        $(document).ready(function () {
            $('#scheduleTable').DataTable({
                responsive: true,
                pageLength: 25,
                order: [[0, 'desc']],
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false,
                        searchable: false,
                        width: '110px'
                    },
                    {
                        targets: '_all',
                        className: 'dt-center'
                    },
                    {
                        targets: [0], // ID column
                        width: '40px'
                    },
                    {
                        targets: [2, 4, 5], // Day, Start, End columns
                        width: '70px'
                    }
                ],
                dom: '<"top"lf>rt<"bottom"ip>',
                language: {
                    search: "",
                    searchPlaceholder: "Search...",
                    lengthMenu: "_MENU_",
                    info: "_START_-_END_ of _TOTAL_"
                }
            });
        });
    </script>
</div> <!-- end of .modern-table-container -->
</div> <!-- end of .main-content -->

