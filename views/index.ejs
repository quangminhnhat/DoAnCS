<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Trang Chủ</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="https://demos.creative-tim.com/notus-js/assets/styles/tailwind.css">
  <!-- link swiper-->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
  <link rel="stylesheet"
    href="https://demos.creative-tim.com/notus-js/assets/vendor/@fortawesome/fontawesome-free/css/all.min.css">
</head>

<body>
  <%- include('../views/shared/header.ejs') %>

  <div class="slider-container index-slider">

    <!-- items lish-->
    <div class="slider-wrapper swiper-wrapper">
      <div class="slider-item swiper-slide">
        <div class="slide-content">
          <h3 class="slide-subtitle"></h3>
          <h2 class="slide-title"></h2>
          <p class="slide-description"></p>
          <a href="#" class="slide-button">Tìm Hiểu Thêm</a>
        </div>
      </div>
      <div class="slider-item swiper-slide">
        <div class="slide-content">
          <h3 class="slide-subtitle"></h3>
          <h2 class="slide-title"></h2>
          <p class="slide-description"></p>
          <a href="#" class="slide-button">Tìm Hiểu Thêm</a>
        </div>
      </div>
      <div class="slider-item swiper-slide">
        <div class="slide-content">
          <h3 class="slide-subtitle"></h3>
          <h2 class="slide-title"></h2>
          <p class="slide-description"></p>
          <a href="#" class="slide-button">Tìm Hiểu Thêm</a>
        </div>
      </div>
      <div class="slider-item swiper-slide">
        <div class="slide-content">
          <h3 class="slide-subtitle"></h3>
          <h2 class="slide-title"></h2>
          <p class="slide-description"> </p>
          <a href="#" class="slide-button">Tìm Hiểu Thêm</a>
        </div>
      </div>
      <div class="slider-item swiper-slide">
        <div class="slide-content">
          <h3 class="slide-subtitle"></h3>
          <h2 class="slide-title"></h2>
          <p class="slide-description"></p>
          <a href="#" class="slide-button">Tìm Hiểu Thêm</a>
        </div>
      </div>
    </div>
    <!-- slide button-->
    <div class="slider-controls">

      <ul class="slider-pagination">
        <div class="slider-indicator"></div>
        <li class="slider-tab"></li>
        <li class="slider-tab"></li>
        <li class="slider-tab"></li>
        <li class="slider-tab"></li>
        <li class="slider-tab"></li>
      </ul>
    </div>
  </div>

  <div class="slider-title" style="
  font-size: 2.5rem;
  font-weight: bold;
  color: #2563eb;
  text-align: center;
  margin: 40px 0 30px 0;
  letter-spacing: 2px;
  text-shadow: 0 2px 8px rgba(37,99,235,0.08), 0 1px 0 #fff;
  font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
  position: relative;
  display: inline-block;
  width: 100%;
">
    <span style="
    background: linear-gradient(90deg, #2563eb 60%, #60a5fa 100%);
    color: #fff;
    padding: 8px 36px;
    border-radius: 32px;
    box-shadow: 0 2px 12px rgba(37,99,235,0.10);
    display: inline-block;
    position: relative;
    z-index: 1;
  ">
      <i class="fas fa-star" style="color:#facc15;margin-right:12px;"></i>
      Khóa học nổi bật
      <i class="fas fa-star" style="color:#facc15;margin-left:12px;"></i>
    </span>
  </div>

  <div class="news-slider-container">
    <button class="news-slider-arrow left"><i class="fas fa-chevron-left"></i></button>
    <div class="news-section swiper news-swiper">
      <div class="swiper-wrapper">
        <% if (courses && courses.length) { %>
        <% courses.forEach(function(course) { %>
        <div class="news-item2 swiper-slide">
          <img src="/images/<%= course.img %>" alt="Course Image">
          <% console.log(course.img ) %>
          <div class="news-content">
            <div class="news-title">
              <a href="<%= course.link %>"><%= course.title %></a>
            </div>
            <div class="news-description">
              <%= course.course_desc %>
            </div>
          </div>
        </div>
        <% }); %>
        <% } else { %>
        <div class="news-item2 swiper-slide">
          <div class="news-content">
            <div class="news-title">No courses available</div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
    <button class="news-slider-arrow right"><i class="fas fa-chevron-right"></i></button>
  </div>
  <button class="news-slider-arrow right"><i class="fas fa-chevron-right"></i></button>
  </div>

  <div class="slider-title" style="
  font-size: 2.5rem;
  font-weight: bold;
  color: #2563eb;
  text-align: center;
  margin: 40px 0 30px 0;
  letter-spacing: 2px;
  text-shadow: 0 2px 8px rgba(37,99,235,0.08), 0 1px 0 #fff;
  font-family: 'Segoe UI', 'Roboto', Arial, sans-serif;
  position: relative;
  display: inline-block;
  width: 100%;
">
    <span style="
    background: linear-gradient(90deg, #2563eb 60%, #60a5fa 100%);
    color: #fff;
    padding: 8px 36px;
    border-radius: 32px;
    box-shadow: 0 2px 12px rgba(37,99,235,0.10);
    display: inline-block;
    position: relative;
    z-index: 1;
  ">
      <i class="fas fa-star" style="color:#facc15;margin-right:12px;"></i>
      Khoá học kỹ năng
      <i class="fas fa-star" style="color:#facc15;margin-left:12px;"></i>
    </span>
  </div>

  <!-- news-slider-container dưới khoá học kỹ năng -->
  <% 
  const skillList2 = [
  { img: "/images/kn1.jpg", title: "Khoá Học Giao Tiếp", desc: "Khoá học giúp học viên phát triển kỹ năng giao tiếp hiệu quả, tự tin trong các tình huống hàng ngày và môi trường học tập, làm việc." },
  { img: "/images/kn2.png", title: "Khoá Học Thuyết Trình", desc: "Trang bị cho học viên kỹ năng thuyết trình chuyên nghiệp, diễn đạt ý tưởng rõ ràng, thuyết phục trước đám đông." },
  { img: "/images/kn3.jpg", title: "Khoá Học MC", desc: "Đào tạo kỹ năng dẫn chương trình, xử lý tình huống linh hoạt, nâng cao sự tự tin và khả năng giao tiếp trước công chúng." },
  { img: "/images/kn4.jpg", title: "Khoá Học Hát", desc: "Giúp học viên rèn luyện kỹ thuật thanh nhạc, cảm âm, phát triển giọng hát và thể hiện cảm xúc qua âm nhạc." },
  { img: "/images/kn5.jpg", title: "Khoá Học Vẽ Tranh", desc: "Khơi dậy khả năng sáng tạo, hướng dẫn các kỹ thuật vẽ cơ bản đến nâng cao, phát triển tư duy nghệ thuật cho học viên." },
  { img: "/images/kn6.jpg", title: "Khoá Học Guitar", desc: "Cung cấp kiến thức nhạc lý, kỹ thuật chơi guitar từ cơ bản đến nâng cao, giúp học viên tự tin biểu diễn các bản nhạc yêu thích." },
  { img: "/images/kn7.jpg", title: "Khoá Học Piano", desc: "Hướng dẫn kỹ thuật chơi piano, đọc bản nhạc, phát triển khả năng cảm thụ âm nhạc và biểu diễn tự tin." }
  ];
%>
  <div class="news-slider-container">
    <button class="news-slider-arrow left"><i class="fas fa-chevron-left"></i></button>
    <div class="news-section swiper kn2-swiper">
      <div class="swiper-wrapper">
        <% skillList2.forEach(function(skill) { %>
        <div class="news-item2 swiper-slide">
          <img src="<%= skill.img %>" alt="Skill Image">
          <div class="news-content">
            <div class="news-title">
              <% if (skill.title === "Khoá Học Giao Tiếp") { %>
              <a href="/GiaoTiepClass"><%= skill.title %></a>
              <% } else if (skill.title === "Khoá Học Thuyết Trình") { %>
              <a href="/ThuyetTrinhClass"><%= skill.title %></a>
              <% } else if (skill.title === "Khoá Học MC") { %>
              <a href="/MCClass"><%= skill.title %></a>
              <% } else if (skill.title === "Khoá Học Hát") { %>
              <a href="/HatClass"><%= skill.title %></a>
              <% } else if (skill.title === "Khoá Học Vẽ Tranh") { %>
              <a href="/VeTranhClass"><%= skill.title %></a>
              <% } else if (skill.title === "Khoá Học Guitar") { %>
              <a href="/GuitarClass"><%= skill.title %></a>
              <% } else if (skill.title === "Khoá Học Piano") { %>
              <a href="/PianoClass"><%= skill.title %></a>
              <% } else { %>
              <%= skill.title %>
              <% } %>
            </div>
            <div class="news-description">
              <%= skill.desc %>
            </div>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
    <button class="news-slider-arrow right"><i class="fas fa-chevron-right"></i></button>
  </div>

  <%- include('../views/shared/footer.ejs') %>
  <!-- link swiper-->
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
  <script src="/js/script.js"></script>
</body>

</html>