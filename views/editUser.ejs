<body>
   <%- include('../views/shared/header.ejs') %>
 
 





    <style>
    .modern-container {
        max-width: 600px;
        margin: 48px auto 0 auto;
        padding: 2.5rem 2rem 2rem 2rem;
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
        border: 1px solid #e3e6ed;
        animation: fadeIn 0.5s;
    }
    .modern-title {
        font-size: 2rem;
        font-weight: 700;
        color: #2375D8;
        text-align: center;
        margin-bottom: 2rem;
        letter-spacing: 1px;
    }
    .modern-section {
        margin-bottom: 2rem;
        padding: 1.5rem;
        background: #f7fafc;
        border-radius: 10px;
    }
    .modern-section-title {
        font-size: 1.25rem;
        color: #4a5568;
        margin-bottom: 1rem;
        font-weight: 600;
    }
    .modern-info-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: 1rem;
    }
    .modern-info-item {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
    }
    .modern-info-label {
        font-size: 0.875rem;
        color: #718096;
        font-weight: 500;
    }
    .modern-info-value {
        font-size: 1rem;
        color: #2d3748;
        font-weight: 600;
    }
    .modern-btn-primary {
        background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
        color: #fff;
        font-weight: 700;
        font-size: 1.1rem;
        padding: 0.7rem 1.5rem;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 16px rgba(36, 117, 216, 0.10);
        transition: background 0.2s, transform 0.15s;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 0.7rem;
        text-decoration: none;
    }
    .modern-btn-primary:hover {
        background: linear-gradient(90deg, #0c9083 0%, #2375D8 100%);
        transform: translateY(-2px) scale(1.03);
        box-shadow: 0 8px 24px rgba(36, 117, 216, 0.18);
    }
    .modern-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 2rem;
    }
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(18px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<main>
    <div class="modern-container">
        <div class="modern-header">
            <div class="modern-title">Edit User</div>
            <a href="/profile" class="modern-btn-primary" style="font-size:1rem;padding:0.5rem 1.2rem;">
                <i class="fas fa-user"></i> View Profile
            </a>
        </div>
        <form action="/users/<%= editUser.id %>" method="POST" class="space-y-6">
            <div class="modern-section">
                <div class="modern-section-title">Account Information</div>
                <div class="modern-info-grid">
                    <div class="modern-info-item">
                        <label class="modern-info-label">Username</label>
                        <input type="text" name="username" value="<%= editUser.username %>" required
                            class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 modern-info-value">
                    </div>
                    <div class="modern-info-item">
                        <label class="modern-info-label">Role</label>
                        <select name="role" class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 modern-info-value">
                            <option value="student" <%= editUser.role === 'student' ? 'selected' : '' %>>Student</option>
                            <option value="teacher" <%= editUser.role === 'teacher' ? 'selected' : '' %>>Teacher</option>
                            <option value="admin" <%= editUser.role === 'admin' ? 'selected' : '' %>>Admin</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="modern-section">
                <div class="modern-section-title">Personal Information</div>
                <div class="modern-info-grid">
                    <div class="modern-info-item">
                        <label class="modern-info-label">Full Name</label>
                        <input type="text" name="full_name" value="<%= editUser.full_name %>" required
                            class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 modern-info-value">
                    </div>
                    <div class="modern-info-item">
                        <label class="modern-info-label">Email</label>
                        <input type="email" name="email" value="<%= editUser.email %>" required
                            class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 modern-info-value">
                    </div>
                    <div class="modern-info-item">
                        <label class="modern-info-label">Phone Number</label>
                        <input type="text" name="phone_number" value="<%= editUser.phone_number %>" required
                            class="border rounded-lg px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 modern-info-value">
                    </div>
                </div>
            </div>
            <div class="flex justify-between items-center mt-6">
                <a href="/users" class="modern-btn-primary" style="background:#f7fafc;color:#2375D8;border:1px solid #2375D8;box-shadow:none;">
                    <i class="fas fa-arrow-left"></i> Back to users
                </a>
                <button type="submit" class="modern-btn-primary">
                    <i class="fas fa-save"></i> Save Changes
                </button>
            </div>
        </form>
    </div>
</main>

