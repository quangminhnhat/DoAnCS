            border: 1px solid #e3e6ed;
            padding: 2.5rem 2rem 2rem 2rem;
            animation: fadeIn 0.5s;
        }
        .modern-table-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: 1px;
        }
        #userTable {
            font-size: 1rem;
            width: 100% !important;
            border-radius: 12px;
            overflow: hidden;
            background: #fff;
        }
        #userTable th {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            border: none;
            padding: 12px 8px;
            text-align: center;
        }
        #userTable td {
            background: #f9fafb;
            border: none;
            padding: 10px 8px;
            color: #22223b;
            text-align: center;
            vertical-align: middle;
        }
        #userTable tr {
            border-bottom: 1px solid #e5e7eb;
            transition: background 0.2s;
        }
        #userTable tr:hover {
            background: #e3f2fd;
        }
        #userTable tr:last-child {
            border-bottom: none;
        }
        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 16px rgba(36,117,216,0.10);
            transition: background 0.2s, transform 0.15s;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.7rem;
            margin-bottom: 10px;
        }
        .modern-btn-primary:hover {
            background: linear-gradient(90deg, #0c9083 0%, #2375D8 100%);
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 8px 24px rgba(36,117,216,0.18);
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(10px);}
            to { opacity: 1; transform: translateY(0);}
        }
    </style>
