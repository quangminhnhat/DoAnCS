          <option value="name">Sort by Name</option>
          <option value="date">Sort by Start Date</option>
          <option value="price">Sort by Price</option>
        </select>
      </div>
      <div class="overflow-x-auto">
        <table class="modern-table" id="courseTable">
          <thead>
            <tr>
              <th>Course</th>
              <th>Class</th>
              <th>Teacher</th>
              <th>Schedule</th>
              <th>Time</th>
              <th>Enrolled</th>
              <th>Tuition</th>
              <th>Description</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="courseTableBody">
            <% if (courses && courses.length > 0) { %>
              <% courses.forEach(course => { %>
                <tr class="course-row">
                  <td><%= course.course_name %></td>
                  <td><%= course.class_name %></td>
                  <td><%= course.teacher_name %></td>
                  <td><%= course.weekly_schedule %></td>
                  <td><%= course.start_time %> - <%= course.end_time %></td>
                  <td><%= course.enrolled_count || 0 %></td>
                  <td>$<%= course.tuition_fee ? course.tuition_fee.toLocaleString() : 'N/A' %></td>
                  <td><%= course.description %></td>
                  <td>
                    <form action="/enroll-course" method="POST">
                      <input type="hidden" name="class_id" value="<%= course.class_id %>">
                      <button type="submit" class="modern-btn-primary">
                        <i class="fas fa-user-plus"></i> Enroll
                      </button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="9" style="height:260px; padding:0;">
                  <div style="height:100%;display:flex;flex-direction:column;align-items:center;justify-content:center;">
                    <i class="fas fa-book-open text-4xl mb-3"></i>
                    <div>No courses available.</div>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
