  <script>
    // Search functionality
    document.getElementById('searchInput').addEventListener('input', function (e) {
      const searchText = e.target.value.toLowerCase();
      const rows = document.querySelectorAll('.course-row');
      rows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchText) ? '' : 'none';
      });
    });

    // Sorting functionality
    document.getElementById('sortSelect').addEventListener('change', function (e) {
      const table = document.getElementById('courseTableBody');
      const rows = Array.from(document.querySelectorAll('.course-row'));
      rows.sort((a, b) => {
        if (e.target.value === 'name') {
          return a.cells[0].textContent.localeCompare(b.cells[0].textContent);
        } else if (e.target.value === 'date') {
          // Assuming start_date is in the 0-based index 0 (course_name), so use class_name or another field if needed
          return 0; // You can adjust this if you have a date column
        } else if (e.target.value === 'price') {
          const priceA = parseFloat(a.cells[6].textContent.replace(/[^0-9.]/g, '')) || 0;
          const priceB = parseFloat(b.cells[6].textContent.replace(/[^0-9.]/g, '')) || 0;
          return priceA - priceB;
        }
      });
      rows.forEach(row => table.appendChild(row));
    });
  </script>

