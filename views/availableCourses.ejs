    <script>
        // Search functionality
        document.getElementById('searchInput').addEventListener('input', function (e) {
            const searchText = e.target.value.toLowerCase();
            const cards = document.querySelectorAll('.course-card');

            cards.forEach(card => {
                const title = card.querySelector('h2').textContent.toLowerCase();
                const desc = card.querySelector('p').textContent.toLowerCase();
                card.style.display =
                    title.includes(searchText) || desc.includes(searchText) ? 'block' : 'none';
            });
        });

        // Sorting functionality
        document.getElementById('sortSelect').addEventListener('change', function (e) {
            const grid = document.getElementById('courseGrid');
            const cards = Array.from(document.querySelectorAll('.course-card'));

            cards.sort((a, b) => {
                if (e.target.value === 'name') {
                    return a.querySelector('h2').textContent.localeCompare(
                        b.querySelector('h2').textContent
                    );
                } else if (e.target.value === 'date') {
                    const dateA = new Date(a.querySelector('.bg-blue-100').textContent);
                    const dateB = new Date(b.querySelector('.bg-blue-100').textContent);
                    return dateA - dateB;
                } else if (e.target.value === 'price') {
                    const priceA = parseInt(a.querySelector('.fa-money-bill').nextElementSibling.textContent);
                    const priceB = parseInt(b.querySelector('.fa-money-bill').nextElementSibling.textContent);
                    return priceA - priceB;
                }
            });

            cards.forEach(card => grid.appendChild(card));
        });
    </script>

