<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
        <div class="p-6">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-bold text-gray-800"><%= course.course_name %></h1>
                <% if (user.role === 'admin') { %>
                <div class="flex space-x-2">
                    <a href="/courses/<%= course.id %>/edit" 
                       class="bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded">
                        Edit Course
                    </a>
                </div>
                <% } %>
            </div>

            <div class="grid grid-cols-2 gap-6 mb-6">
                <div>
                    <h2 class="text-lg font-semibold mb-2">Course Details</h2>
                    <div class="space-y-2">
                        <p><span class="font-medium">Start Date:</span> <%= course.formatted_start_date %></p>
                        <p><span class="font-medium">End Date:</span> <%= course.formatted_end_date %></p>
                        <p><span class="font-medium">Tuition Fee:</span> <%= course.tuition_fee ? course.tuition_fee.toLocaleString() + ' VND' : 'Not set' %></p>
                        <p class="text-gray-700"><%= course.description %></p>
                    </div>
                </div>
            </div>

            <div class="mt-8">
                <h2 class="text-lg font-semibold mb-4">Classes (<%= course.classes.length %>)</h2>
                <div class="overflow-x-auto">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                            <tr>
                                <!-- Add table headers -->
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                            <% course.classes.forEach(cls => { %>
                            <tr>
                                <!-- Add class details -->
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-8">
                <h2 class="text-lg font-semibold mb-4">Materials (<%= course.materials.length %>)</h2>
                <!-- Add materials list -->
            </div>
        </div>
    </div>
</div>