            color: #374151;
            margin-bottom: 0.5rem;
            letter-spacing: 0.5px;
        }
        .modern-form-control, .modern-form-control:focus {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1.5px solid #e5e7eb;
            border-radius: 8px;
            font-size: 1rem;
            background: #f9fafb;
