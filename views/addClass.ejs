    <main class="container mx-auto px-4 py-8">
        <div class="form-container">
            <h1 class="form-title">Add New Class</h1>

            <form action="/classes" method="POST" class="space-y-6">
                <div class="form-group">
                    <label for="class_name" class="block text-sm font-medium text-gray-700">Class Name</label>
                    <input type="text" 
                           id="class_name" 
                           name="class_name" 
                           class="mt-1 block w-full rounded-md border-gray-300" 
                           required>
                </div>

                <div class="form-group">
                    <label for="course_id" class="block text-sm font-medium text-gray-700">Course</label>
                    <select id="course_id" 
                            name="course_id" 
                            class="mt-1 block w-full rounded-md border-gray-300" 
                            required>
                        <option value="">Select Course</option>
                        <% courses.forEach(course => { %>
                            <option value="<%= course.id %>"
                                    data-start="<%= course.start_date %>"
                                    data-end="<%= course.end_date %>">
                                <%= course.course_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label for="teacher_id" class="block text-sm font-medium text-gray-700">Teacher</label>
                    <select id="teacher_id" 
                            name="teacher_id" 
                            class="mt-1 block w-full rounded-md border-gray-300" 
                            required>
                        <option value="">Select Teacher</option>
                        <% teachers.forEach(teacher => { %>
                            <option value="<%= teacher.id %>">
                                <%= teacher.full_name %>
                            </option>
                        <% }) %>
                    </select>
                </div>

                <div class="form-group">
                    <label class="block text-sm font-medium text-gray-700">Weekly Schedule</label>
                    <div class="grid grid-cols-7 gap-2 mt-1">
                        <% ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'].forEach((day, index) => { %>
                            <div class="flex items-center">
                                <input type="checkbox" 
                                       name="weekly_days" 
                                       value="<%= index + 1 %>"
                                       class="h-4 w-4 text-blue-600 rounded border-gray-300">
                                <label class="ml-2 text-sm text-gray-600"><%= day %></label>
                            </div>
                        <% }) %>
                    </div>
                </div>

                <div class="grid grid-cols-2 gap-4">
                    <div class="form-group">
                        <label for="start_time" class="block text-sm font-medium text-gray-700">Start Time</label>
                        <input type="time" 
                               id="start_time" 
                               name="start_time" 
                               class="mt-1 block w-full rounded-md border-gray-300" 
                               required>
                    </div>

                    <div class="form-group">
                        <label for="end_time" class="block text-sm font-medium text-gray-700">End Time</label>
                        <input type="time" 
                               id="end_time" 
                               name="end_time" 
                               class="mt-1 block w-full rounded-md border-gray-300" 
                               required>
                    </div>
                </div>

                <div class="flex justify-end space-x-4">
                    <a href="/classes" 
                       class="px-4 py-2 bg-gray-300 text-gray-700 rounded hover:bg-gray-400">
                        Cancel
                    </a>
                    <button type="submit" 
                            class="px-4 py-2 bg-blue-500 text-black rounded hover:bg-blue-600">
                        Create Class
                    </button>
                </div>
            </form>
        </div>
    </main>
    <script>
    document.querySelector('form').addEventListener('submit', function(e) {
        const startTime = document.getElementById('start_time').value;
        const endTime = document.getElementById('end_time').value;
        const weeklyDays = document.querySelectorAll('input[name="weekly_days"]:checked');
        if (weeklyDays.length === 0) {
            e.preventDefault();
            alert('Please select at least one day for the weekly schedule');
            return;
        }
        if (startTime >= endTime) {
            e.preventDefault();
            alert('End time must be after start time');
            return;
        }
    });
    </script>


