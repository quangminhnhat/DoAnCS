<!DOCTYPE html>
<html>

<head>
    <title>Payments</title>
</head>

<body>
    <h1>Payment List</h1>
    <a href="/">Back</a>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Student</th>
            <th>Amount</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        <% payments.forEach(p => { %>
        <tr>
            <td><%= p.id %></td>
            <td><%= p.student_name %></td>
            <td><%= p.amount %></td>
            <td><%= p.payment_date.toISOString().split('T')[0] %></td>
            <td>
                <a href="/payments/<%= p.id %>/edit">Edit</a>
                <form method="POST" action="/payments/<%= p.id %>?_method=DELETE" style="display:inline;">
                    <button type="submit" onclick="return confirm('Delete this payment?')">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </table>
</body>

</html>