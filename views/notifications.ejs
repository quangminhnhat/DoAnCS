      </a>
      <% } %>
    </div>
    <% if (user.role === 'admin' || user.role === 'teacher') { %>
    <div id="sendNotificationCard" class="modern-card mb-8">
      <div class="modern-section-title" style="margin-bottom:1rem;">
        <i class="fas fa-paper-plane"></i> Send Notification
      </div>
      <form action="/notifications" method="POST" class="modern-form-grid">
        <div class="modern-info-item">
          <label for="userId" class="modern-info-label">To User</label>
          <select name="userId" id="userId" class="modern-info-value" required>
            <option value="">Select User</option>
            <% users && users.forEach(user => { %>
              <option value="<%= user.id %>"><%= user.full_name %></option>
            <% }) %>
          </select>
        </div>
        <div class="modern-info-item" style="grid-column:span 2;">
          <label for="message" class="modern-info-label">Message</label>
          <input type="text" name="message" id="message" class="modern-info-value" required placeholder="Notification message">
        </div>
        <div style="grid-column:span 2;text-align:right;">
          <button type="submit" class="modern-btn-primary"><i class="fas fa-paper-plane"></i> Send</button>
        </div>
      </form>
    </div>
    <% } %>
    <div class="overflow-x-auto">
      <table class="modern-table" id="notificationsTable">
        <thead>
          <tr>
            <th>ID</th>
            <th>From</th>
            <th>To</th>
            <th>Message</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% notifications.forEach(notification => { %>
          <tr>
            <td><%= notification.id %></td>
            <td><%= notification.sender_name %></td>
            <td><%= notification.receiver_name %></td>
            <td><%= notification.message %></td>
            <td><%= notification.created_at.toLocaleString() %></td>
            <td class="notification-status <%= !notification.read ? 'unread-notification' : '' %>" data-id="<%= notification.id %>">
              <%= notification.read ? 'Read' : 'Unread' %>
            </td>
            <td class="actions">
              <form method="POST" action="/notifications/<%= notification.id %>?_method=DELETE" style="display:inline;">
                <button type="submit" class="delete" title="Delete" onclick="return confirm('Delete this notification?')">
                  <i class="fas fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
