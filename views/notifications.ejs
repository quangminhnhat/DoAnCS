    <div class="container">
        <h2>Notifications</h2>

        <% if (user.role === 'admin' || user.role === 'teacher') { %>
        <div class="mb-4">
            <form action="/notifications" method="POST" class="notification-form">
                <select name="userId" required>
                    <option value="">Select User</option>
                    <% users.forEach(user => { %>
                    <option value="<%= user.id %>"><%= user.full_name %></option>
                    <% }) %>
                </select>
                <input type="text" name="message" placeholder="Notification message" required>
                <button type="submit" class="btn">Send Notification</button>
            </form>
        </div>
        <% } %>

        <table id="notificationsTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>From</th>
                    <th>To</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Actions</th>

                </tr>
            </thead>
            <tbody>
                <% notifications.forEach(notification => { %>
                <tr>
                    <td><%= notification.id %></td>
                    <td><%= notification.sender_name %></td>
                    <td><%= notification.receiver_name %></td>
                    <td><%= notification.message %></td>
                    <td><%= notification.created_at.toLocaleString() %></td>
                    <td class="notification-status <%= !notification.read ? 'unread-notification' : '' %>"
                        data-id="<%= notification.id %>">
                        <%= notification.read ? 'Read' : 'Unread' %>
                    </td>
                    <td>
                        <form method="POST" action="/notifications/<%= notification.id %>?_method=DELETE"
                            style="display:inline;">
                            <button type="submit" class="btn btn-delete"
                                onclick="return confirm('Delete this notification?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }) %>
