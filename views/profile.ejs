    <style>
        .modern-container {
            max-width: 600px;
            margin: 48px auto 0 auto;
            padding: 2.5rem 2rem 2rem 2rem;
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 4px 24px rgba(44, 62, 80, 0.10);
            border: 1px solid #e3e6ed;
            animation: fadeIn 0.5s;
        }

        .modern-title {
            font-size: 2rem;
            font-weight: 700;
            color: #2375D8;
            text-align: center;
            margin-bottom: 2rem;
            letter-spacing: 1px;
        }

        .modern-section {
            margin-bottom: 2rem;
            padding: 1.5rem;
            background: #f7fafc;
            border-radius: 10px;
        }

        .modern-section-title {
            font-size: 1.25rem;
            color: #4a5568;
            margin-bottom: 1rem;
            font-weight: 600;
        }

        .modern-info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
            gap: 1rem;
        }

        .modern-info-item {
            display: flex;
            flex-direction: column;
            gap: 0.25rem;
        }

        .modern-info-label {
            font-size: 0.875rem;
            color: #718096;
            font-weight: 500;
        }

        .modern-info-value {
            font-size: 1rem;
            color: #2d3748;
            font-weight: 600;
        }

        .modern-btn-primary {
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.7rem 1.5rem;
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 16px rgba(36, 117, 216, 0.10);
            transition: background 0.2s, transform 0.15s;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 0.7rem;
            text-decoration: none;
        }

        .modern-btn-primary:hover {
            background: linear-gradient(90deg, #0c9083 0%, #2375D8 100%);
            transform: translateY(-2px) scale(1.03);
            box-shadow: 0 8px 24px rgba(36, 117, 216, 0.18);
        }

        .modern-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(18px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
</head>

