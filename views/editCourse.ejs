<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Course</title>
</head>
<body>
  <h1>Edit Course</h1>
  <form action="/courses/<%= course.id %>" method="POST">
    <label>Course Name:</label><br>
    <input type="text" name="course_name" value="<%= course.course_name %>" required><br><br>

    <label>Description:</label><br>
    <textarea name="description" rows="5" cols="50"><%= course.description %></textarea><br><br>

    <label>Start Date:</label><br>
    <input type="date" name="start_date" value="<%= course.start_date.toISOString().slice(0, 10) %>" required><br><br>

    <label>End Date:</label><br>
    <input type="date" name="end_date" value="<%= course.end_date.toISOString().slice(0, 10) %>" required><br><br>

    <button type="submit">Update</button>
  </form>
</body>
</html>
