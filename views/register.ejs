            display: block;
            font-weight: 600;
            color: #374151;
            margin-bottom: 0.5rem;
            letter-spacing: 0.5px;
        }

        .modern-form-control,
        .modern-form-control:focus {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1.5px solid #e5e7eb;
            border-radius: 8px;
            font-size: 1rem;
            background: #f9fafb;
            transition: border-color 0.2s, box-shadow 0.2s;
            outline: none;
            color: #22223b;
        }

        .modern-form-control:focus {
            border-color: #2375D8;
            box-shadow: 0 0 0 2px #2375d830;
            background: #fff;
        }

        .modern-btn-primary {
            width: 100%;
            background: linear-gradient(90deg, #2375D8 0%, #0c9083 100%);
            color: #fff;
            font-weight: 700;
            font-size: 1.1rem;
            padding: 0.85rem 0;
