                       <li><a href="#">Tuyển Sinh</a></li>  
                       <li><a href="#">Thời Khoá Biểu</a></li>  
                       <li><a href="#">Góp Ý</a></li>  
                       <li><a href="#">Thông Tin Cá Nhân</a></li>  
                   </ul>  
               }  
            </li>

            <li class="nav-item">
                @if (User.IsInRole("giáo viên"))
               {
                   <a href="#">Giáo Viên</a>
                   <ul class="sub-menu">
                       <li><a href="#">Thông Tin Lớp Học</a></li>
